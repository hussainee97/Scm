<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_curves"
    tools:context=".PetrolOrders"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NASI GORENG + AYAM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"

                    android:gravity="center"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/bonusBalanceLinearLayout"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bonusBalanceIcon"
                        android:layout_marginRight="4dp"
                      android:text="RM"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:id="@+id/bonusBalaceTextview"
                        android:layout_gravity="center"
                        android:textSize="15sp"


                        android:layout_marginBottom="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/bonusInfoTextView"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:id="@+id/quantityEditText"
                        android:layout_marginTop="7dp"
                        android:padding="10dp"
                        android:editable="true"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:hint="Enter Quantity"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="5dp"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:id="@+id/reedemBonusBtn"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:onClick="redeemDiscount"
                        android:padding="10dp"
                        android:text="REDEEM BONUS"
                        android:editable="true"
                        android:background="@color/darkGreen"
                        />



                </LinearLayout>


                <!--       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="45dp"
                           android:layout_marginTop="7dp"
                           android:padding="10dp"
                           android:hint="Promo code (Optional)"
                           android:background="@drawable/edit_text_bg"
                           /> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Summary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cost"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="------------"
                            android:textSize="18sp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="RM"
                                android:textSize="18dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="0.00"
                                android:id="@+id/costTextView"
                                android:textSize="18dp"
                                />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_charge_label"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="------------"
                            android:textSize="18sp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">



                            <!-- <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="8dp"
                              android:text="RM"
                              android:textSize="18dp"
                              /> -->

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="RM0.00"
                                android:fontFamily="serif-monospace"
                                android:textSize="18dp"
                                android:id="@+id/serviceChargeTextView"
                                />
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discount"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="------------"
                            android:textSize="18sp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="RM"
                                android:id="@+id/discountTextViewNairaSign"
                                android:textSize="18dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="0.00"
                                android:id="@+id/discountTextView"
                                android:textSize="18dp"
                                />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="#000" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:layout_alignParentLeft="true"
                            android:textSize="18sp"
                            android:id="@+id/totalLabel"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="********"
                            android:id="@+id/totalDivider"
                            android:textSize="18sp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="RM"
                                android:id="@+id/totalNairaSign"
                                android:textSize="18dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/totalTextView"
                                android:text="0.00"
                                android:textSize="18dp"
                                />

                        </LinearLayout>


                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="6dp"
                        android:background="#000" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm deivery address"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:hint="Enter your delivery address here"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_bg"
                    android:editable="true"
                    android:id="@+id/deliveryAddressEditTextForOrderPage"
                    android:padding="10dp"
                    android:layout_marginTop="9dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:id="@+id/btnClearOrderDetails"
                        android:text="CLEAR"
                        android:onClick="clearALLFields"
                        android:background="@color/red"

                        />


                <Button
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:textColor="#fff"

                    android:id="@+id/btnOrder"
                    android:text="CALCULATE &amp; REVIEW ORDER"
                    android:background="@color/colorPrimaryDark"

                    />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>